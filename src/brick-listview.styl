:host, :host * {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
:host {
  overflow: auto;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  position: relative;
  height: 100%;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
  display: block;

  .item.sentinel {
    visibility: hidden;
  }
  .list {
    position: relative;
    transform: translateZ(0);
  }
  .item {
    img {
      height: 100%;
    }
    height: 80px;
    position: absolute;
    width: 100%;
    cursor: pointer;
    display: flex;
    .content {
      align-self: center;
    }
  }
  &.scrolling {
    .item {
      pointer-events: none;
    }
  }
}
