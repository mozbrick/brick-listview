brick-listview, brick-listview * {
  box-sizing: border-box;
  -moz-box-sizing: border-box;
}
brick-listview {
  overflow: auto;
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  position: relative;
  height: 100%;
  width: 100%;
  max-height: 100%;
  max-width: 100%;
  display: block;

  .item.sentinel {
    visibility: hidden;
  }
  .list {
    position: relative;
    transform: translateZ(0);
  }
  .item {
    line-height: 2rem;
    font-size: 1rem;
    font-family: 'Fira Sans';
    padding: .5rem 0 .5rem 1rem;
    position: absolute;
    width: 100%;
    border-bottom: 1px solid #ccc;
    cursor: pointer;
    &:hover {
      background: #eee;
    }
  }

  &.scrolling {
    .item {
      pointer-events: none;
    }
  }
}
